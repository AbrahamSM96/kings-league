---
import Layout from '../layouts/Layout.astro'
const response = await fetch(
  'https://kings-league-api-abrahamsm.abrahamserrano96.workers.dev/teams'
)
const teams = await response.json()
---

<Layout title="Welcome to Astro.">
  <div class="container m-auto">
    <header class="flex">
      {
        teams.map(({ id, image, name }) => (
          <a href={`/team/${id}`}>
            <img
              class="aspect-square w-12 "
              src={image}
              alt={`Escudo del equipo ${name}`}
            />
          </a>
        ))
      }
      <nav>
        <ul>
          <li>
            <a href="/equipos">Teams</a>
          </li>
          <li>
            <a href="/calendario">Calendario</a>
          </li>
          <li>
            <a href="/Estadisticas">Estad√≠sticas</a>
          </li>
          <li>
            <a href="/contacto">Contacto</a>
          </li>
          <li>
            <a href="/reglamento">Reglamento</a>
          </li>
        </ul>
      </nav>
    </header>
    <main></main>
  </div>
</Layout>
